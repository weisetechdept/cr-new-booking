# Application Configuration
APP_NAME="CRL Booking System"
APP_ENV=production
APP_DEBUG=false

# Authentication - Multiple Users
# Format: USERNAME:PASSWORD_OR_HASH,USERNAME:PASSWORD_OR_HASH
# Example plaintext: admin:password123,manager:pass456
# Example hashed: admin:$argon2id$v=19$m=65536$t=4$p=3$...,manager:$argon2id$v=19$...
USERS=admin:your_secure_admin_password_here,manager:your_secure_manager_password_here,sales:sales_password_here,viewer:viewer_password_here

# Password Configuration
# Set to true if passwords in USERS are already hashed (recommended for production)
USE_HASHED_PASSWORDS=false

# App Secret (used as salt for password hashing)
# Generate a strong random string and keep it secret!
APP_SECRET=your_32_character_secret_key_here

# Legacy support (optional - will be overridden by USERS if set)
ADMIN_PASSWORD=your_secure_admin_password_here  
MANAGER_PASSWORD=your_secure_manager_password_here

# Session Configuration
SESSION_TIMEOUT=1800

# API Configuration
API_URL=https://your-api-endpoint.com/api
API_TIMEOUT=30
API_CONNECT_TIMEOUT=10

# Security
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
MAX_DATE_RANGE_DAYS=365

# Timezone
TZ=Asia/Bangkok

# Logging
LOG_LEVEL=info
LOG_PATH=/var/www/html/logs
LOG_LOGIN_ATTEMPTS=true
LOG_DATA_ACCESS=true

# SSL (for production with HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/server.crt
# SSL_KEY_PATH=/etc/ssl/certs/server.key